<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>main</servlet-name>
        <servlet-class>Servelets.main</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>database1</servlet-name>
        <servlet-class>Servelets.database1</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cart</servlet-name>
        <servlet-class>Servelets.cart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>Servelets.Register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>Servelets.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cartQytUpdate</servlet-name>
        <servlet-class>Servelets.cartQytUpdate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cartqytupdate</servlet-name>
        <servlet-class>Servelets.cartqytupdate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cartproductremove</servlet-name>
        <servlet-class>Servelets.cartproductremove</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PlaceOrder</servlet-name>
        <servlet-class>Servelets.PlaceOrder</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>database1</servlet-name>
        <url-pattern>/database1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cart</servlet-name>
        <url-pattern>/add-to-cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cartQytUpdate</servlet-name>
        <url-pattern>/cart-qyt-update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cartqytupdate</servlet-name>
        <url-pattern>/cartqytupdate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cartproductremove</servlet-name>
        <url-pattern>/cart-product-remove</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PlaceOrder</servlet-name>
        <url-pattern>/order-place</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
